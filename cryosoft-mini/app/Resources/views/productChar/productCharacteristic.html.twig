{% extends 'base.html.twig' %}
{% block body %}
    <script
            src="https://code.jquery.com/jquery-3.2.1.min.js"
            integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
            crossorigin="anonymous"></script>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Project name</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class=""><a href="/new">Definition</a></li>
                    <li class="active"><a id="linkpro" href="/productChar">Product Charateristic</a></li>
                </ul>
            </div>
            <!--/.nav-collapse -->
        </div>
    </nav></br><br/></br>
    <h1>Study Name: <span id="name">{{ studyName}}</span> </h1>
    <table border="1" width="1450px">
        <thead>
        <tr>
            <th style="text-align: center">Product</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td style="text-align: center"><a href="#" data-toggle="modal" data-target="#newPro">New product</a></td>
        </tr>
        </tbody>
    </table>
    <form action="#" method="post" onsubmit="return checkforblank()">
         <div class="modal fade" id="newPro" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Modal Header</h4>
                </div>
                <div class="modal-body">
                    <div class="box">
                        <div class="box-header with-border">
                            <h3 class="box-title" style="text-align: center">Product</h3>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body" style="text-align: center">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-6">
                                        <img src="../../img/plaque.jpg" id="img1"  style="display: none; " height="180" width="180">
                                        <img src="../../img/parall_dresse.jpg" id="img2" style="display: none" height="180" width="180">
                                        <img src="../../img/parall_couche.jpg" id="img3" style="display: none" height="180" width="180">
                                        <img src="../../img/cylindre_dresse.jpg" id="img4" style="display: none" height="180" width="180">
                                        <img src="../../img/cylindre_couche.gif" id="img5" style="display: none" height="180" width="180">
                                        <img src="../../img/sphere.jpg" id="img6" style="display: none" height="180" width="180">
                                        <img src="../../img/cylindre_dresse_concentric.jpg" id="img7" style="display: none" height="180" width="180">
                                        <img src="../../img/cylindre_couche_concentric.jpg" id="img8" style="display: none" height="180" width="180">
                                        <img src="../../img/parall_pane.jpg" id="img9" style="display: none" height="180" width="180">
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Product Name</label>
                                            <input class="form-control" type="text" name="productName">
                                        </div>
                                        <div class="form-group">
                                            <label>Shape</label>
                                            <select class="form-control" name="shape" id="shapeName" onchange="checkforblank()">
                                                <option  value="Choose shape">Choose shape</option>
                                                {% for shape in listShape %}
                                                    <option value="{{ shape.id }}"> {{ shape.name }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label>Dimension 1</label>
                                            <input class="form-control" type="text" id="D1" name="_D1" disabled>
                                        </div>
                                        <div class="form-group">
                                            <label>Dimension 2</label>
                                            <input class="form-control" type="text" id="D2" name="_D2" disabled>
                                        </div>
                                        <div class="form-group">
                                            <label>Dimension 3</label>
                                            <input class="form-control" type="text" id="D3" name="_D3" disabled>
                                        </div>
                                    </div>
                                </div>
                                <br/>
                            </div>
                            <br/>
                            <br/>

                        </div>
                        <br/>
                        <!-- /.box-body -->
                        <!-- box-footer -->
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" id="changeInfo" class="btn btn-info">Confirm</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    </form>
    <script>
        $('#shapeName').change(function() {
//            alert($(this).val());
            $('#D1').prop( "disabled", true ).val('');
            $('#D2').prop( "disabled", true ).val('');
            $('#D3').prop( "disabled", true ).val('');
            if( $(this).val() == 1) {
                $('#D1').prop( "disabled", true ).val('NOTAPPLICABALE');
                $('#D2').prop( "disabled", true ).val('NOTAPPLICABALE');
                $('#D3').prop( "disabled", true ).val('NOTAPPLICABALE');

            }

            else if ($(this).val() == 2 || $(this).val() == 3 || $(this).val() == 9) {
                $('#D1').prop( "disabled", false );
                $('#D2').prop( "disabled", true ).val('NOTAPPLICABALE');
                $('#D3').prop( "disabled", false );
            }

            else if ($(this).val() == 4 || $(this).val() == 5 || $(this).val() == 7 || $(this).val() == 8) {
                $('#D2').prop( "disabled", true ).val('NOTAPPLICABALE');
                $('#D3').prop( "disabled", true ).val('NOTAPPLICABALE');
                $('#D1').prop( "disabled", false );
            }

            else if ($(this).val() == 6) {
                $('#D1').prop( "disabled", true ).val('NOTAPPLICABALE');
                $('#D2').prop( "disabled", true ).val('NOTAPPLICABALE');
                $('#D3').prop( "disabled", true ).val('NOTAPPLICABALE');
            }

        });
        $('#shapeName').change(function() {
            var optionSelected = $("option:selected", this);
            var valueSelected = this.value;
            $("#img1, #img2, #img3, #img4, #img5, #img6,#img7,#img8,#img9 ").hide();
                if(valueSelected == 1){
                    $('#img1').show();
                } else if( valueSelected == 2) {
                    $('#img2').show();
                }else if( valueSelected == 3) {
                    $('#img3').show();
                }else if( valueSelected == 4) {
                    $('#img4').show();
                }else if( valueSelected == 5) {
                    $('#img5').show();
                }else if( valueSelected == 6) {
                    $('#img6').show();
                }else if( valueSelected == 7) {
                    $('#img7').show();
                }else if( valueSelected == 8) {
                    $('#img8').show();
                }else if( valueSelected == 9) {
                    $('#img9').show();
                }
        });
        function checkforblank() {

            var location = document.getElementById('shapeName');
            var invalid = location.value == "Choose shape";

            if (invalid) {
                alert('Please choose shape');
                location.className = 'error';
            }
            return !invalid;
        }
    </script>
    <style>
        .error {border: 1px red solid; display: block;
            width: 100%;
            padding: .5rem .75rem;
            font-size: 1rem;
            line-height: 1.25;
            color: #464a4c;
            background-color: #fff;
            background-image: none;
            -webkit-background-clip: padding-box;
            background-clip: padding-box;
            /*border: 1px solid rgba(0,0,0,.15);*/
            border-radius: .25rem;}
    </style>
{% endblock %}