{% extends 'base.html.twig' %}

{% block body %}
    <h1>Entities list</h1>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Description</th>
                <th>Deudate</th>
                <th>Createdate</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('entity_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                <td>{{ entity.category }}</td>
                <td>{{ entity.description }}</td>
                <td>{% if entity.deuDate %}{{ entity.deuDate|date('Y-m-d') }}{% endif %}</td>
                <td>{% if entity.createDate %}{{ entity.createDate|date('Y-m-d') }}{% endif %}</td>
                <td>{{ entity.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('entity_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('entity_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('entity_new') }}">Create a new entity</a>
        </li>
    </ul>
{% endblock %}
