{% extends 'base.html.twig' %}

{% block body %}
    <h1>Entity</h1>

    <table>
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ entity.category }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Deudate</th>
                <td>{% if entity.deuDate %}{{ entity.deuDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Createdate</th>
                <td>{% if entity.createDate %}{{ entity.createDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('entity_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('entity_edit', { 'id': entity.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
